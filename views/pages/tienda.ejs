<%- include('../templates/head', {tituloWeb: '- Tienda' }) %>

    <!-- Start Service Area -->
    <section class="services section">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-12">
                    <div class="section-title align-left" style="padding:0;">
                        <span class=" wow fadeInDown" data-wow-delay=".2s">Tienda</span>
                        <h2 class="wow fadeInUp text-wrap" data-wow-delay=".4s">Cursos
                            Disponibles
                        </h2>
                    </div>
                </div>

                <div class="col-lg-6 col-md-12" style="margin-top: 35px;">
                    <div class="container-fluid">
                        <div class="d-flex" style="float:right;">
                            <input class="form-control me-2" id="buscador" type="search"
                                placeholder="Escriba el nombre del curso" aria-label="Search"
                                style="width : 400px; height : 10px">
                            <button class="btn btn-outline-primary" id="btnBuscar">Buscar</button>
                        </div>
                    </div>
                </div>
            </div>
            <br>
            <!-- Herramientas de trabajo -->

            <h2 class="wow fadeInUp text-center" data-wow-delay=".2s">Herramientas de trabajo</h2>

            <br>


            <div class="single-head">
                <div class="row">

                    <% for(var i=0; i < cursoTrabajo.length; i++){ %>
                        <form action="/producto" method="get" style="width: 330px;"><!-- TAMANO DE LOS FORMS -->
                            <div class="col-lg-3 col-md-6 col-12 mb-5" style="width: 300px;"> <!-- TAMANO DEL FONDO GRIS -->

                            <!-- ENVIAMOS LOS DATOS DEL CURSOS DE FORMA OCULTA  -->
                            <input id="id" type="text" value="<%= cursoTrabajo[i]._id %>" name="id" hidden>
                            <input id="nombre" type="text" value="<%= cursoTrabajo[i].nombre %>" name="nombre" hidden>
                            <input id="logo" type="text" value="<%= cursoTrabajo[i].logo %>" name="logo" hidden>
                            <input id="precio" type="text" value="<%= cursoTrabajo[i].precio %>" name="precio" hidden>
                            <!-- FIN -->
                                    <div class="single-service wow fadeInUp" data-wow-delay=".2s">
                                        <h3 class="text-center"><a >
                                                <%= cursoTrabajo[i].nombre %>
                                            </a></h3>
                                        <div class="col text-center">
                                            <!--<a id="logo" type="submit"><img src="<%= cursoTrabajo[i].logo %>"  alt="#"
                                        height="200px" width="200px"></a>-->
                                            <input type="image" src="<%= cursoTrabajo[i].logo %>" height="200px"
                                                width="200px">
                                        </div>
                                        <p class="text-center" id="precio">$ <%= cursoTrabajo[i].precio %>
                                        </p>
                                        <br>
                                        <div class="button text-center">
                                            <a class="btn" data-toggle="modal" data-target="#modalConfirmacion">Añadir
                                                a carrito</a>
                                        </div>
                                    </div>
                                </div>
                        </form>
                        <% } %>
                </div>

            </div>


            <hr>
            <!-- Redes sociales -->

            <h2 class="wow fadeInUp text-center" data-wow-delay=".2s">Redes Sociales</h2>

            <br>
            <div class="single-head">
                <img class="service-patern wow fadeInLeft" data-wow-delay=".5s"
                    src="assets/images/service/service-patern.png" alt="#">
                <div class="row">
                    <% for(var e=0; e < cursoRedSocial.length; e++){ %>
                        <form action="/producto" method="get" style="width: 330px;">
                            <div class="col-lg-3 col-md-6 col-12 mb-5" style="width: 300px;">
                                <!-- ENVIAMOS LOS DATOS DEL CUROS DE FORMA OCULTA  -->
                                <input id="id" type="text" value="<%= cursoRedSocial[e]._id %>" name="id" hidden>
                                <input id="nombre" type="text" value="<%= cursoRedSocial[e].nombre %>" name="nombre"
                                    hidden>
                                <input id="logo" type="text" value="<%= cursoRedSocial[e].logo %>" name="logo" hidden>
                                <input id="precio" type="text" value="<%= cursoRedSocial[e].precio %>" name="precio"
                                    hidden>
                                <!-- FIN -->
                                <div class="single-service wow fadeInUp" data-wow-delay=".2s">
                                    <h3 class="text-center"><a>
                                            <%= cursoRedSocial[e].nombre %>
                                        </a></h3>
                                    <div class="col text-center">
                                        <!-- <a href="/producto" id="<%= cursoRedSocial[e]._id %>" type="submit">
                                    <img src="<%= cursoRedSocial[e].logo %>" alt="#" height="200px"
                                    width="200px"></a>-->
                                        <input type="image" src="<%= cursoRedSocial[e].logo %>" height="200px"
                                            width="200px">
                                    </div>
                                    <p class="text-center">$ <%= cursoRedSocial[e].precio %>
                                    </p>
                                    <br>
                                    <div class="button text-center">
                                        <a class="btn btn-secondary" data-toggle="modal"
                                            data-target="#modalConfirmacion">Añadir
                                            a carrito</a>
                                    </div>
                                </div>
                            </div>
                        </form>
                        <% } %>
                </div>
            </div>



            <!-- Modal de confirmacion-->
            <div class="modal fade" id="modalConfirmacion" tabindex="-1" aria-labelledby="exampleModalLabel"
                aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Curso Agregado al Carrito</h5>
                            <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close">
                        </div>
                        <div class="modal-body">
                            Se a agregado este curso al Carrito, para pagar debe dirigirse a la seccion de
                            <b>Carrito</b>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary" data-dismiss="modal">Aceptar</button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Final Modal de confirmacion-->
        </div>
    </section>
    <!-- /End Services Area -->
    <script>
        var element = document.getElementById('tienda');
        element.classList.add('active');
    </script>

    <%- include('../templates/footer') %>