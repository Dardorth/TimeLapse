<%- include('../templates/head', {tituloWeb: '- Carrito de compra'}) %>
    <section class="services section">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="section-title align-left">
                        <span class=" wow fadeInDown" data-wow-delay=".2s">Carrito</span>
                        <h2 class="wow fadeInUp" data-wow-delay=".4s">Tu Carrito de compra</h2>
                    </div>
                </div>
            </div>

            <div class="row">
                <!-- Carrito de compra -->
                <div class="col-lg-9 col-md-9 col-9">
                    <h4 class="wow fadeInUp text-center mb-1" data-wow-delay=".4s">Productos seleccionados</h4>
                    <div class="single-head wow fadeInUp" data-wow-delay=".4s">
                        <div class="">
                            <% if (typeof addProduct !== 'undefined') { %>
                                <table class="table table-bordered  border-primary">
                                    <thead>
                                        <tr class="table-primary">
                                            <th scope="col">Producto</th>
                                            <th scope="col">Precio</th>
                                            <th scope="col">Eliminar</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>
                                                <div class="row align-items-center">
                                                    <div class="col-lg-2 col-md-4 col-6">
                                                        <img src="/images/products/<%= addProduct.logo %>" alt="#"
                                                            style="height:80px;">
                                                    </div>
                                                    <div class="col-lg-10 col-md-8 col-6">
                                                        <h5 class="product-name"><%= addProduct.name %> </h5>
                                                        <p class="product-des">
                                                            <span><em> Categoria: <%= addProduct.category %> </em> </span>
                                                        </p>
                                                    </div>
                                                </div>
                                            </td>
                                            <td><%= addProduct.price %></td>
                                            <td>
                                                <button type="button" class="btn btn-danger"><i class="fas fa-trash-alt"></i></button>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            <% }else{ %>
                                <h1>no tienes nada</h1>
                            <% } %>
                        </div>
                    </div>


                </div>
                <!-- /Fin de carrito de compras -->

                <!-- TOTALES-->
                <div class="col-lg-3 col-md-3 col-3 wow fadeInRight" data-wow-delay=".4s">
                    <h2>&nbsp</h2>
                    <div class=" text-center" style="width: 18rem;">
                        <div class="">
                            <h3 class="">Totales</h3>
                            <br>
                            <p class="">
                            <h6>Sub Total: $20.97</h6>
                            <hr>
                            <h6>Total neto: $20.97</h6>
                            </p>
                            <br>
                            <div class="button">
                                <a href="/checkout" class="btn">Realizar pedido</a>
                                <br><br>
                                <a href="/tienda" class="btn btn-alt">Continuar Comprando</a>
                            </div>
                        </div>
                    </div>
                </div>


            </div>

        </div>
    </section>
    <script>
        var element = document.getElementById('carrito');
        element.classList.add('active');
    </script>
    <%- include('../templates/footer') %>