<%- include('../templates/head', {tituloWeb: '- Perfil' }) %>

    <!-- Start User Profile Area -->
    <section class="about-us section">
        <div class="">
            <div class="row">
                
                <%- include('templates/aside') %>

                <div class="col-lg-9 col-md-8">
                    <div class="container mt-4">
                        <div class="about-left mt-4">
                            <div class="section-title">
                                <h2 class="wow fadeInUp" data-wow-delay=".4s">Esta es tu sección de cursos!</h2>
                                <p class="wow fadeInUp" data-wow-delay=".6s">Aquí se listan todos los cursos que haz
                                    adquirido, y podrás verlos cuando tú quieras <i class="far fa-smile-wink"></i></p>
                            </div>
                        </div>

                        <div class="services">
                            <div class="single-head">
                                <div class="row">
                                    <% if (cursosComprados.length  >= 1) { %>
                                        <% cursosComprados.forEach(curso => { %>
                                            <div class="col-lg-4 col-md-6 col-12">
                                                <div class="single-service wow fadeInUp text-center" data-wow-delay=".2s">
        
                                                    <h3><a href="#">Curso de <%= curso.cursos.name %> </a></h3>
        
                                                    <div class="image mt-3">
                                                        <img src="images/products/<%= curso.cursos.logo %> " alt="#"
                                                            height="200px" width="200px">
                                                    </div>
                                                    <div class="button mt-5">
                                                        <a href="/curso/<%= curso.cursos.name %> " class="btn">Vizualizar Curso</a>
                                                    </div>
                                                </div>
                                            </div>
                                        <% }) %>
                                    <% } else { %>
                                        <div class="col-lg-12">
                                            <div class="row">
                                                <div class="col-lg-2 d-flex justify-content-end">
                                                    <img class="d-inline" src="images/service/imagen2.png" alt="img" style="width: 50px;">
                                                </div>
                                                <div class="col-lg-10 d-flex align-items-center">
                                                    <h6 class="">No tienes ni un hp curso loco, tan en menos de 3 palitos, qué locurín contigo</h6>
                                                </div>
                                            </div>
                                        </div>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>
    <!-- /End User Profile Area -->
    <script>
        const i = document.querySelectorAll('i');
        const h6 = document.querySelectorAll('h6');

        i[1].classList.add('text-primary');
        h6[0].classList.add('text-primary');

    </script>
    <%- include('../templates/footer') %>