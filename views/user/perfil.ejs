<%- include('../templates/head', {tituloWeb: '- Perfil' }) %>

    <!-- Start User Profile Area -->
    <section class="about-us section">
        <div class="">
            <div class="row">
                <aside class="col-lg-3 col-md-4 col-12 d-flex justify-content-center mb-5">
                    <div class="sidebar ml-2 border-1 border-right">
                        <div class="mb-3 text-center">
                            <form action="">
                                <div class="image-profile">
                                    <img class="profile" src="images/profiles/franklin.jpeg" alt="">
                                    <input type="file" id="profile-image">
                                    <label for="profile-image" class="overlay-profile"><i
                                            class="fas fa-camera fa-2x mt-1"></i></label>
                                </div>
                            </form>
                            <p class="mt-4">Hola, <span class="text-primary font-weight-bold">
                                    <%if(user){%>
                                        <%= user.name +' '+ user.lastname%>
                                    <% } %>
                                </span>

                            </p>

                            <small>user@user</small>

                        </div>
                        <hr class="w-50 mx-auto">

                        <div class="widget popular-feeds px-5" style="border-style: none;">
                            <h5 class="widget-title text-primary">Esta es tu sección</h5>
                            <div class="">
                                <div class="single-popular-feed">
                                    <i class="far fa-folder-open fa-lg d-inline mr-2 nav-active"></i>
                                    <h6 class="nav-active"><a href="/perfil">Mis Cursos</a></h6>
                                </div>

                                <div class="single-popular-feed">
                                    <i class="fas fa-battery-three-quarters fa-lg d-inline mr-2"></i>
                                    <h6 class=""><a href="/miProgreso">Mi Progreso</a></h6>
                                </div>
                                <div class="single-popular-feed">
                                    <i class="far fa-chart-bar fa-lg d-inline mr-2"></i>
                                    <h6 class=""><a href="/editarPerfil">Editar Cuenta</a></h6>
                                </div>
                            </div>
                        </div>
                    </div>
                </aside>

                <div class="col-lg-9 col-md-8">
                    <div class="container mt-4">
                        <div class="about-left mt-4">
                            <div class="section-title">
                                <h2 class="wow fadeInUp" data-wow-delay=".4s">Esta es tu sección de cursos!</h2>
                                <p class="wow fadeInUp" data-wow-delay=".6s">Aquí se listan todos los cursos que haz
                                    adquirido, y podrás verlos cuando tú quieras <i class="far fa-smile-wink"></i></p>
                            </div>
                        </div>

                        <div class="services">
                            <div class="single-head">
                                <div class="row">
                                    <!-- <div class="col-lg-4 col-md-6 col-12">
                                        <div class="single-service wow fadeInUp text-center" data-wow-delay=".2s">

                                            <h3><a href="#">Curso de Whatsapp</a></h3>

                                            <div class="image mt-3">
                                                <img src="images/products/logo-whatsapp.png" alt="#"
                                                    height="200px" width="200px">
                                            </div>
                                            <div class="button mt-5">
                                                <a href="/curso-whatsapp" class="btn">Vizualizar Curso</a>
                                            </div>
                                        </div>

                                    </div> -->
                                    <% if (cursosComprados) { %>
                                        <% cursosComprados.forEach(curso => { %>
                                            <% if (curso._id == user.id) { %>
                                                <div class="col-lg-4 col-md-6 col-12">
                                                    <div class="single-service wow fadeInUp text-center" data-wow-delay=".2s">
            
                                                        <h3><a href="#">Curso de <%= curso.cursos.name %> </a></h3>
            
                                                        <div class="image mt-3">
                                                            <img src="images/products/<%= curso.cursos.logo %> " alt="#"
                                                                height="200px" width="200px">
                                                        </div>
                                                        <div class="button mt-5">
                                                            <a href="/curso-whatsapp" class="btn">Vizualizar Curso</a>
                                                        </div>
                                                    </div>
                                                </div>
                                            <% } %>
                                        <% }) %>
                                    <% } %>
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>
    <!-- /End User Profile Area -->
    <script>
        const element = document.querySelectorAll('.nav-active');
        element.forEach(active => {
            active.classList.add('text-primary');
        });
    </script>
    <%- include('../templates/footer') %>